<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/imagesPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/smileImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/emoji_size"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_smile_emoji" />

        <ImageView
            android:id="@+id/smileImage2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/emoji_size"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_cool_emoji" />

        <ImageView
            android:id="@+id/smileImage3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/emoji_size"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_dizzy_emoji" />

        <ImageView
            android:id="@+id/smileImage4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/emoji_size"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_rabbit_emoji_svgrepo_com" />

        <ImageView
            android:id="@+id/smileImage5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/emoji_size"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_happy_emoji_svgrepo_com" />
    </LinearLayout>

    <com.priesniakov.viktor.view.FingerDrawView
        android:id="@+id/drawingView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagesPicker" />

    <FrameLayout
        android:id="@+id/imagesContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagesPicker" />


</androidx.constraintlayout.widget.ConstraintLayout>